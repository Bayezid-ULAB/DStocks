<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerCompany"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/background_dark"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabsTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed">

            <android.support.design.widget.TabItem
                android:id="@+id/dseXGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume" />

            <android.support.design.widget.TabItem
                android:id="@+id/dseSGraph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trade" />

            <android.support.design.widget.TabItem
                android:id="@+id/dse30Graph"
                android:onClick="show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Value" />

        </android.support.design.widget.TabLayout>
        <LinearLayout
            android:background="@android:color/darker_gray"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="140dp"
                android:layout_weight="1"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:text="Company Code"
                android:id="@+id/code"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="100dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textSize="18sp"
                />

        </LinearLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:id="@+id/refreshTopCompanies"
            android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/topCompanyList"
            android:splitMotionEvents="false"
            >

        </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationCompany"
        app:menu="@menu/drawer"
        android:layout_gravity="start"
        >

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
</android.support.design.widget.CoordinatorLayout>